# Quick kernel update to existing SD
kernel-update:
	@echo "$(BOLD)âš¡ Quick kernel update$(RESET)"
	@$(MAKE) kernel
	@if [ "$(SD_DEVICE)" != "auto" ]; then \
		sudo mount $(SD_DEVICE)1 /mnt && \
		sudo cp $(FIRMWARE_DIR)/boot/uImage /mnt/ && \
		sudo umount /mnt && \
		echo "$(GREEN)âœ“ Kernel updated on SD card$(RESET)"; \
	fi

